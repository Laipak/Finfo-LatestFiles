<?php echo Html::script('backend/js/client/slick.min.js'); ?>

<script type="text/javascript">
$(document).ready(function(){
$('.responsive').slick({
  dots: true,
  infinite: false,
  speed: 300,
  slidesToShow: 4,
  slidesToScroll: 1,
  responsive: [
    {
      breakpoint: 1024,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 3,
        infinite: true,
        dots: true
      }
    },
    {
      breakpoint: 600,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 2
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
  ]
});
});
    $('.menu-active').removeClass('menu-active');
    $('#financial-result').addClass('menu-active');


    $(document).ready(function() { 

        $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
            var target = $(e.target).attr("href");
            if(target == '#announcements_tab') {
                localStorage.setItem('lastTab', $(this).attr('href'));
            } else {
               localStorage.setItem('lastTab', ''); 
            }
            
        });
        var lastTab = localStorage.getItem('lastTab');
        if (lastTab) {
            $('[href="' + lastTab + '"]').tab('show');
        }

        $('#financial-result, p.description').click(function(){
            localStorage.setItem('lastTab', '');
        });   
        $('.btn-prev-financial').click(function(e){
            e.preventDefault();
           $('.slick-prev').click(); 
        });
        $('.btn-next-financial').click(function(e){
            e.preventDefault();
           $('.slick-next').click(); 
        });

    });
</script>
    <?php if($active_theme !== "default"): ?>
    <script>
    $(document).ready(function(){
        $(".nav-tabs a").click(function(){
            $(this).tab('show');
        });
        $('.nav-tabs a').on('shown.bs.tab', function(event){
            var x = $(event.target).text();         // active tab
            var y = $(event.relatedTarget).text();  // previous tab
            $(".act span").text(x);
            $(".prev span").text(y);
        });
    });
    </script>
    <?php endif; ?>
